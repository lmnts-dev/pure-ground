{% style %}
    #Bi-column-text-blocks-{{ section.id }} {
      --topSpacingRatio: {{section.settings.top_spacing}} / 100;
      --bottomSpacingRatio: {{section.settings.bottom_spacing}} / 100;
    }
 {% endstyle %}

<div id="Bi-column-text-blocks-{{ section.id }}" class="bi-column-text-blocks color-{{section.settings.color_scheme}}">
    {% if section.settings.heading %}
        <h2 class="rich-text__heading">{{ section.settings.heading | escape }}</h2>
    {% endif %}
    {% if section.settings.subheading %}
      <h2 class="split-section__text__heading">{{ section.settings.subheading }}</h1>
    {% endif %}
    {% if section.settings.image %}
      {% render 'next-gen-img', image: section.settings.image %}
    {% endif %}

    {%- for block in section.blocks -%}
    {%- case block.type -%}
      {%- when 'text' -%}
        {% if block.settings.heading %}
          <h3 class="rich-text__text">{{ block.settings.heading }}</h3>
        {% endif %}
        {% if block.settings.content %}
          <p class="rich-text__text">{{ block.settings.content }}</p>
        {% endif %}
        {% if block.settings.button_link %}
          <a {% if block.settings.button_link == blank %} role="link" aria-disabled="true"{% else %} href="{{ block.settings.button_link }}"{% endif %} {{ block.shopify_attributes }}>
            {{ block.settings.button_label | escape }}
          </a>
        {% endif %}
    {%- endcase -%}
  {%- endfor -%}

</div>

{% schema %}
{
  "name": "Bi-Column Text Blocks",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
      {
      "type": "text",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image",
      "info": "Image displayed on left side of entire section"
    },
    {
    "type": "select",
    "id": "color_scheme",
    "options": [
      {
        "value": "cream",
        "label": "Cream (Default)"
      },
      {
        "value": "dark-cream",
        "label": "Dark Cream"
      },
      {
        "value": "grass",
        "label": "Grass"
      },
      {
        "value": "sun",
        "label": "Sun"
      },
      {
        "value": "ground",
        "label": "Ground"
      },
      {
        "value": "sky",
        "label": "Sky"
      },
      {
        "value": "tan",
        "label": "Tan"
      }
      ],
      "default": "cream",
      "label": "Color Scheme"
    },
     {
      "type": "range",
      "id": "top_spacing",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "%",
      "label": "Top Spacing",
      "default": 50
    },
    {
      "type": "range",
      "id": "bottom_spacing",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "%",
      "label": "Bottom Spacing",
      "default": 50
    }
  ],
  "blocks" :[
     {
      "name": "Text Block",
      "type": "text",
      "settings": [
        {
          "type": "header",
          "content": "Text"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Text Content"
        },
        {
          "type": "header",
          "content": "Button"
        },       
        {
          "type": "text",
          "id": "button_label",
          "default": "Button label",
          "label": "Button Label"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
      ]
    },
    {
      "name": "Icon / Badge",
      "type": "icon",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "alt",
          "default": "Image alt text",
          "label": "Alt"
        }
      ]
    }   
  ],
  "presets": [
    {
      "name": "Bi-Column Text Blocks"
    }
  ]
}
{% endschema %}
