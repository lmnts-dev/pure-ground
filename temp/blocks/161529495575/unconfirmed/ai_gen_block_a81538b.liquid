{% doc %}
  @prompt
    i just want to put a picture
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-block-{{ ai_gen_id }} {
    width: 100%;
    max-width: 100%;
  }

  .ai-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: auto;
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
  }

  .ai-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    object-fit: {{ block.settings.image_fit }};
  }

  .ai-image-placeholder-{{ ai_gen_id }} {
    background-color: #f4f4f4;
    width: 100%;
    height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
    opacity: 0.3;
  }

  .ai-image-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 6px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  {% if block.settings.image_link != blank %}
    .ai-image-link-{{ ai_gen_id }} {
      display: block;
      text-decoration: none;
      cursor: pointer;
    }

    .ai-image-link-{{ ai_gen_id }}:hover .ai-image-{{ ai_gen_id }} {
      transform: scale(1.02);
      transition: transform 0.3s ease;
    }
  {% endif %}

  {% if block.settings.caption != blank %}
    .ai-image-caption-{{ ai_gen_id }} {
      margin-top: 16px;
      text-align: {{ block.settings.caption_alignment }};
      color: {{ block.settings.caption_color }};
      font-size: {{ block.settings.caption_size }}px;
    }
  {% endif %}

  @media screen and (max-width: 749px) {
    .ai-image-placeholder-{{ ai_gen_id }} {
      height: 300px;
    }
  }
{% endstyle %}

<div class="ai-image-block-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.image_link != blank %}
    <a href="{{ block.settings.image_link }}" class="ai-image-link-{{ ai_gen_id }}">
  {% endif %}
  
  <div class="ai-image-wrapper-{{ ai_gen_id }}">
    {% if block.settings.image %}
      <img
        src="{{ block.settings.image | image_url: width: 2000 }}"
        alt="{{ block.settings.image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.image.width }}"
        height="{{ block.settings.image.height }}"
        class="ai-image-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="ai-image-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
        <div class="ai-image-empty-state-{{ ai_gen_id }}">
          Click to add your image
        </div>
      </div>
    {% endif %}
  </div>

  {% if block.settings.image_link != blank %}
    </a>
  {% endif %}

  {% if block.settings.caption != blank %}
    <div class="ai-image-caption-{{ ai_gen_id }}">
      {{ block.settings.caption }}
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Image",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "url",
      "id": "image_link",
      "label": "Image link"
    },
    {
      "type": "select",
      "id": "image_fit",
      "label": "Image fit",
      "options": [
        {
          "value": "cover",
          "label": "Cover"
        },
        {
          "value": "contain",
          "label": "Contain"
        },
        {
          "value": "fill",
          "label": "Fill"
        }
      ],
      "default": "cover"
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Border radius",
      "default": 0
    },
    {
      "type": "header",
      "content": "Caption"
    },
    {
      "type": "richtext",
      "id": "caption",
      "label": "Caption"
    },
    {
      "type": "select",
      "id": "caption_alignment",
      "label": "Caption alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "color",
      "id": "caption_color",
      "label": "Caption color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "caption_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Caption size",
      "default": 16
    }
  ],
  "presets": [
    {
      "name": "Image"
    }
  ]
}
{% endschema %}